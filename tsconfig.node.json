{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "vite.config.ts",
    "src/server/**/*.ts",
    "src/server/**/*.js",
    "src/services/**/*.ts",
    "src/middleware/**/*.ts"
  ]
}
